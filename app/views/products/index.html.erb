<div align="center">
<h1> Products</h1>

<style>
	td {
		text-align:center;
		
	}
	
	.link.hover{
		color:red;
	}
	
	
</style>

<!-- Kim: 3/5 Product Search -->
<%= form_tag(products_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Products" %>
<%= submit_tag "Search", :name => nil %>
<% end %>

<!-- Kim: 3/5 Product Search Results -->
<div align="left">
<% if params[:search] %>
<h4>Results for <%= params[:search] %></h4>
<% @products.each do |product| %>
<% if product.productLine.include?("Accessories") || product.productLine.include?("Batteries") 	|| product.productLine.include?("Brakes") || product.productLine.include?("Collision") || product.productLine.include?("Electrical")|| product.productLine.include?("Heating") %>
	<% if product.productDescription.include? (params[:search]) %>
		<%= link_to image_tag( product.productImage), :style => " align:center width:100px height:auto" , :action => "show", :controller => 'products', :id => product.productCode %><br />
		<p style="font-size:20px"><%= link_to product.productName, :action => "show", :controller => 'products', :id => product.productCode  %><br /></p>
		$<%= product.buyPrice %><br>
		<p style="padding-right:30px"><%= product.productDescription[0, 100] %>...<br>  <%=link_to " continue reading", :action => "show", :controller => 'products', :id => product.productCode  %></p><br /><br />
<% end %>
<% end %> 
<% end %> 
<% end %> 
</div>
<!-- end product search -->
